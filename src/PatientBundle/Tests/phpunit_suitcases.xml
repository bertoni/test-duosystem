<?xml version="1.0" encoding="UTF-8"?>

<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         stopOnError="true"
         stopOnFailure="true"
         bootstrap="../../../app/bootstrap.php.cache" >
     
    <php>
        <server name="KERNEL_DIR" value="../../../app/" />
    </php>
         
    <testsuites>
        <testsuite name="ENTITY_Paciente">
            <file>Entity/Paciente/PacienteSetTest.php</file>
            <file>Entity/Paciente/PacientePersistTest.php</file>
            <file>Entity/Paciente/PacienteLoadTest.php</file>
            <file>Entity/Paciente/PacienteRemoveTest.php</file>
        </testsuite>
        <testsuite name="ENTITY_Endereco">
            <file>Entity/Endereco/EnderecoSetTest.php</file>
            <file>Entity/Endereco/EnderecoPersistTest.php</file>
            <file>Entity/Endereco/EnderecoLoadTest.php</file>
            <file>Entity/Endereco/EnderecoRemoveTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>